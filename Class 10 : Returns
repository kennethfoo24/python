def double(number):
  number * 2

if upper_lower == "1":
  print(word_to_change.upper())
if upper_lower == "2":
  print(word_to_change.lower())
else:
  print("Invalid la... i said 1 or 2")

print(double(45))

#Below code adds the Return concept, where it returns the output from the code and can be passed for other use.
def double_with_return(number):
  return number * 2

print(double_with_return(45))

#Below code returns the word in upper case
def uppercase(word):
  return word.upper()

print(uppercase("apple"))

name = ["kenneth", "michelle"]

for names in name:
  print(uppercase(names))

